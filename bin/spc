#! /bin/bash
declare -A colors=( \
  ["BLACK"]="0;30"\
  ["LIGHT_GREY"]="0;37"\
  ["DARK_GREY"]="1;30"\
  ["RESET"]="0"\
  ["RED"]='0;31'\
  ["BRIGHT_RED"]="1;31"\
  ["GREEN"]="0;32"\
  ["BRIGHT_GREEN"]="1;32"\
  ["BROWN"]="0;33"\
  ["YELLOW"]="1;33"\
  ["BLUE"]="0;34"\
  ["BRIGHT_BLUE"]="1;34"\
  ["PURPLE"]="0;35"\
  ["LIGHT_PURPLE"]="1;35"\
  ["CYAN"]="0;36"\
  ["LIGHT_CYAN"]="1;36"\
  ["WHITE"]="1;37"\
)

# very important reality-bending variables
SET_PROMPT_COLOR(){
  printf "\033[${1}m"
}

SET_PROMPT_COLOR ${colors[$1]}
